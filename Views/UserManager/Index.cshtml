
@model  RegisterView

<div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
        <form asp-controller="UserManager" asp-action="Register" method="post">

            <div class="form-group">

                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <div> <span asp-validation-for="Email" class="text-danger"></span></div>

            </div>
            <div class="form-group">
                <div class=" alert-danger" asp-validation-for="First_Name"></div>
                <label asp-for="First_Name"></label>
                <input asp-for="First_Name" class="form-control" />
                <div> <span asp-validation-for="First_Name" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="Last_Name"></label>
                <input asp-for="Last_Name" class="form-control" />
                <div> <span asp-validation-for="Last_Name" class="text-danger"></span></div>
            </div>
            <div class="form-group">
                <label asp-for="Password1"></label>
                <input asp-for="Password1" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Password2"></label>
                <input asp-for="Password2" class="form-control" />
                <div> <span asp-validation-for="Password2" class="text-danger"></span></div>

            </div>
            <button class="btn btn-success btn-sm form-control">Register</button>

        </form>
    </div>
    <div class="col-md-3"></div>
    
</div>

